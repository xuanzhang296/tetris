package tetris;

public class Tetromino {
	Cell[] cells;
	
	public Tetromino(){
		cells = new Cell[4];
	}
	public void drop(){
		for(int i=0; i<cells.length;i++){
			cells[i].drop();
		}
	}
	public void moveLeft(){
		for(int i=0; i< cells.length;i++){
			cells[i].moveLeft();
		}
	}
	public void moveRight(){
		for(int i=0; i< cells.length;i++){
			cells[i].moveRight();
		}
	}
}
